" Syntax
syntax enable
syntax on

" File tpye
filetype on
filetype indent on
filetype plugin on
filetype plugin indent on

set autoread

" No backup files
set nobackup

set cursorline

set t_ti= t_te=

set mouse=a

set ruler

set showmode

set laststatus=2

set number

set showmatch

set incsearch

set ignorecase

set smartcase

" Indent
set autoindent
set cindent
set smartindent

set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab

set encoding=utf-8
set fileencodings=utf-8,ucs-bom,cp936,gb18030,big5,euc-jp,euc-kr,latin1

set helplang=cn

set termencoding=utf-8

set ffs=unix,dos,mac

set formatoptions+=B
set completeopt=longest,menu

set wildmenu

